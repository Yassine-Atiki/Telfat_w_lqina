<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.firstproject.telfat_w_lqina.controllers.AdminController">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="20" style="-fx-background-color: white; -fx-padding: 15 25;">
            <VBox spacing="3">
                <Label text="Telfat w lqina" textFill="#C1272D">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <Label text="Panneau d'Administration" textFill="#666666">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </VBox>
            <HBox HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER_RIGHT" spacing="2">
                <Label fx:id="labelAdmin" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label text="Administrateur" textFill="#999999">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Label>
            </VBox>
            <!-- Bouton Déconnexion -->
            <Button onAction="#logout" style="-fx-background-color: transparent; -fx-border-color: #C1272D; -fx-border-width: 1.5; -fx-border-radius: 4; -fx-background-radius: 4; -fx-text-fill: #C1272D; -fx-cursor: hand; -fx-padding: 8 20;" text="Déconnexion">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
            <effect>
                <DropShadow color="#00000010" offsetY="2.0" radius="4.0" />
            </effect>
        </HBox>
    </top>

    <!-- Centre -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="40" style="-fx-padding: 40;">

            <!-- Titre -->
            <VBox alignment="CENTER" spacing="8">
                <Label text="Tableau de Bord" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <Line endX="150.0" startX="-150.0" stroke="#C1272D" strokeWidth="2.0" />
                <Label text="Gérez les utilisateurs et les objets perdus" textFill="#666666">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </VBox>

            <!-- Actions -->
            <HBox alignment="CENTER" spacing="30">

                <!-- Créer Utilisateur -->
                <VBox alignment="CENTER" prefHeight="180" prefWidth="240" spacing="15" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 25;">
                    <Label text="Utilisateurs" textFill="#C1272D">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    <Label text="Gérer les comptes utilisateurs" textAlignment="CENTER" textFill="#666666" wrapText="true">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                    <Button onAction="#createUser" prefHeight="40" prefWidth="200" style="-fx-background-color: #006233; -fx-cursor: hand;" text="Créer un utilisateur" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                        <effect>
                            <DropShadow color="#00000033" offsetY="3.0" />
                        </effect>
                    </Button>
                    <effect>
                        <DropShadow color="#00000010" radius="10.0" />
                    </effect>
                </VBox>

                <!-- Objets Perdus -->
                <VBox alignment="CENTER" prefHeight="180" prefWidth="240" spacing="15" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 25;">
                    <Label text="Objets Perdus" textFill="#C1272D">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    <Label text="Consulter tous les objets" textAlignment="CENTER" textFill="#666666" wrapText="true">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                    <Button onAction="#viewLostObjects" prefHeight="40" prefWidth="200" style="-fx-background-color: #006233; -fx-cursor: hand;" text="Voir la liste" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                        <effect>
                            <DropShadow color="#00000033" offsetY="3.0" />
                        </effect>
                    </Button>
                    <effect>
                        <DropShadow color="#00000010" radius="10.0" />
                    </effect>
                </VBox>

                <!-- Statistiques -->
                <VBox alignment="CENTER" prefHeight="180" prefWidth="240" spacing="15" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 25;">
                    <Label text="Statistiques" textFill="#C1272D">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    <Label text="Rapports et statistiques" textAlignment="CENTER" textFill="#666666" wrapText="true">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                    <Button prefHeight="40" prefWidth="200" style="-fx-background-color: #006233; -fx-cursor: hand;" text="Voir les stats" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                        <effect>
                            <DropShadow color="#00000033" offsetY="3.0" />
                        </effect>
                    </Button>
                    <effect>
                        <DropShadow color="#00000010" radius="10.0" />
                    </effect>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" prefHeight="50.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
            <Label text="© 2025 Telfat w lqina - CAN 2025 Maroc" textFill="#999999">
                <font>
                    <Font size="11.0" />
                </font>
            </Label>
        </HBox>
    </bottom>
</BorderPane>
